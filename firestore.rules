rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for readable, reusable logic.
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return request.auth.uid == uid;
    }

    function isAdmin() {
      // This rule grants admin rights to the specific user email.
      return request.auth.token.email == "stephen@hellotractor.com";
    }
    
    // Internal collection for metadata. Only admins can write to it.
    match /internal/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /sections/{sectionId} {
      // Any signed-in user can read the sections.
      allow get, list: if isSignedIn();
      
      // Only Admins can create, update, or delete sections.
      allow write: if isAdmin();
    }

    match /dashboardLinks/{linkId} {
      // Any signed-in user can read the links.
      allow get, list: if isSignedIn();
      
      // Only Admins can create, update, or delete dashboard links.
      allow write: if isAdmin();
    }

    match /users/{uid} {
       allow read, create, update: if isSignedIn() && isOwner(uid);
       allow delete: if isAdmin(); // Only admins can delete user profiles
    }
    
    match /users/{uid}/dashboardLinks/{linkId} {
        // Any signed-in user can manage their own links.
        allow read, write, delete: if isSignedIn() && isOwner(uid);
    }
  }
}
